{
  "name": "moka-code",
  "version": "0.0.2",
  "description": "CLI para o Ecossistema de Desenvolvimento do Machi",
  "context": [
    {"path": "GEMINI.md"},
    {"path": "context/**/*.md"}
  ],
  "mcpServers": {
    "nodeServer": {
      "command": "node",
      "args": [
        "${extensionPath}${/}dist${/}moka-cli.js",
        "${extensionPath}${/}dist${/}moka-extensions.js"
      ],
      "cwd": "${extensionPath}"
    }
  }
}
